            <font>
                <Font name="System Bold" size="12.0" />
            </font></Label>
        <Button fx:id="submitButton" layoutX="339.0" layoutY="543.0" mnemonicParsing="false" onAction="#submit" text="Submit" />
        <Button fx:id="cancelButton" layoutX="625.0" layoutY="543.0" mnemonicParsing="false" onAction="#cancel" text="Cancel" />
        <ImageView fx:id="ImageView" fitHeight="150.0" fitWidth="200.0" layoutX="463.0" layoutY="393.0" pickOnBounds="true" preserveRatio="true" />
        <Label layoutX="430.0" layoutY="14.0" text="Réserver" textFill="#b90c0c" textOverrun="CENTER_WORD_ELLIPSIS" underline="true" wrapText="true">
            <font>
                <Font name="System Bold" size="21.0" />
            </font>
        </Label>
        <ImageView blendMode="SRC_ATOP" cache="true" fitHeight="117.0" fitWidth="113.0" layoutX="14.0" layoutY="6.0" pickOnBounds="true" smooth="false">
            <image>
                <Image url="@assets/logo.png" />
            </image>
        </ImageView>
        <TextField fx:id="id_participant" layoutX="200.0" layoutY="115.0" prefHeight="58.0" prefWidth="200.0" />
        <Label layoutX="262.0" layoutY="89.0" text="Id participant">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <Label layoutX="424.0" layoutY="235.0" text="Nombre de place">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
      <ChoiceBox fx:id="nbPlace" layoutX="397.0" layoutY="266.0" prefWidth="150.0" />
      <Label layoutX="222.0" layoutY="359.0" text="Veuillez nous confirmer votre réservation:">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
        <CheckBox fx:id="checkBox" layoutX="563.0" layoutY="360.0" onAction="#handleCheckBoxAction" text="Check me" />
    </children>
</AnchorPane>
