<AnchorPane prefHeight="770.0" prefWidth="1125.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.PIDEV.ReservationController">
    <children>
        <TextField fx:id="id_event" layoutX="625.0" layoutY="115.0" prefHeight="58.0" prefWidth="200.0" />
